FROM node:20-slim

# Install build dependencies for native modules (jscanify/canvas)
# See: https://github.com/Automattic/node-canvas#compiling
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    libcairo2-dev \
    libpango1.0-dev \
    libjpeg-dev \
    libgif-dev \
    librsvg2-dev \
    && rm -rf /var/lib/apt/lists/*

# Set environment variable to disable SWC and use Babel instead
ENV NEXT_TELEMETRY_DISABLED=1
ENV SWC_BINARY_PATH=""

# Set working directory
WORKDIR /app

# Install dependencies first (for better caching)
COPY package*.json ./
# Canvas package has a bug (missing cstdint include) but is externalized on server-side anyway
# Try normal install, fallback to --ignore-scripts if canvas build fails
RUN npm ci || \
    (echo "⚠️  npm ci failed (likely canvas build issue). Installing with --ignore-scripts..." && \
     npm install --ignore-scripts)

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start development server with hot reload
CMD ["node", "https-server.js"]